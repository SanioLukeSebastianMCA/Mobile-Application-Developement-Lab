<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/calculator_mainlay"
    android:padding="20dp"
    tools:context=".CalculatorActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/num1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:boxStrokeColor="#FF6559">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Number 01"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/num2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:boxStrokeColor="#FF6559">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Number 02"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/result"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:enabled="false"
        app:boxStrokeColor="#FF6559">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Result"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/operation_check_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No operation selected !!"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#ff0000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/numclearall_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="CE"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/numclear_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="C"
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/nummodulus_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="%"
                android:backgroundTint="#FF5722"
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/divide_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="/"
                android:layout_marginStart="10dp"
                android:backgroundTint="#FF5722"
                android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="4">

            <Button
                android:id="@+id/num7_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="7"
                android:backgroundTint="#FF9900"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/num8_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:backgroundTint="#FF9900"
                android:text="8"
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/num9_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="9"
                android:backgroundTint="#FF9900"
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>

            <Button
                    android:id="@+id/multiply_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="x"
                android:layout_marginStart="10dp"
                android:backgroundTint="#FF5722"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="4">

            <Button
                android:id="@+id/num4_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="4"
                android:backgroundTint="#FF9900"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/num5_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="5"
                android:backgroundTint="#FF9900"
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/num6_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="6"
                android:backgroundTint="#FF9900"
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/substract_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="-"
                android:layout_marginStart="10dp"
                android:backgroundTint="#FF5722"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="4">

            <Button
                android:id="@+id/num1_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="1"
                android:backgroundTint="#FF9900"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/num2_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="2"
                android:backgroundTint="#FF9900"
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/num3_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="3"
                android:backgroundTint="#FF9900"
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/add_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="+"
                android:layout_marginStart="10dp"
                android:backgroundTint="#FF5722"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="4">

            <Button
                android:id="@+id/numplusminus_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="+/-"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/num0_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="0"
                android:backgroundTint="#FF9900"
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/decimal_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="."
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/equals_btn"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="="
                android:layout_marginStart="10dp"
                android:backgroundTint="#FF5722"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>