<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question12Activity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your favourite set of fruits"/>

    <CheckBox
        android:id="@+id/ques_12_check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Apple"/>


    <CheckBox
        android:id="@+id/ques_12_check2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mango"/>


    <CheckBox
        android:id="@+id/ques_12_check3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guava"/>


    <CheckBox
        android:id="@+id/ques_12_check4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grapes"/>


    <CheckBox
        android:id="@+id/ques_12_check5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pineapple"/>

</LinearLayout>